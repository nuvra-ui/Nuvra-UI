message="$(cat $1)"
requiredPattern="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)/.*$"
if ! [[ $message =~ $requiredPattern ]];
then
  echo "-"
  echo "-"
  echo "-"
  echo "ðŸš¨ Wrong commit message! ðŸ˜•"
  echo "The commit message must have this format:"
  echo "<verb in imperative mood>/<what was done>"
    echo "Allowed verbs in imperative mood: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo "Example: impl/login button"
  echo "-"
  echo "Your commit message was:"
  echo $message
  echo "-"
  echo "For more information, check script in .husky/commit-msg"
  echo "-"
  exit 1
fi

{
  "name": "@nuvra-ui/nuvra-ui",
  "license": "MIT",
  "version": "0.1.2",
  "keywords": [
    "react",
    "vue",
    "cross-framework",
    "ui",
    "components",
    "tailwindcss",
    "component-library"
  ],
  "scripts": {
    "dev:react": "lerna run dev --scope @nuvra-ui/react",
    "build:react": "lerna run build --scope @nuvra-ui/react",
    "preview:react": "lerna run preview --scope @nuvra-ui/react",
    "storybook:react": "lerna run storybook --scope @nuvra-ui/react",
    "build-storybook:react": "lerna run build-storybook --scope @nuvra-ui/react",
    "dev:vue": "lerna run dev --scope @nuvra-ui/vue",
    "build:vue": "lerna run build --scope @nuvra-ui/vue",
    "preview:vue": "lerna run preview --scope @nuvra-ui/vue",
    "storybook:vue": "lerna run storybook --scope @nuvra-ui/vue",
    "build-storybook:vue": "lerna run build-storybook --scope @nuvra-ui/vue",
    "build": "lerna run build",
    "prepare": "husky",
    "storybook": "lerna run storybook --stream",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ."
  },
  "lint-staged": {
    "**/*": [
      "prettier --write",
      "eslint ."
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "typescript-eslint": "^8.50.1"
  }
}
